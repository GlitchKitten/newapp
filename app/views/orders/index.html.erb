<h2> Order Index Page</h2>
<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>Order ID</th>
      <th>Product ID</th>
      <th>Total</th>
    </tr> 
  <thead>
    
  <% if signed_in? && current_user.admin? %>
    <% @orders.each do |order| %>
    <tr>
        <td><%= order.user_id %></td>
        <td><%= order.id %></td>
        <td><%= order.product_id %></td>
        <td><%= order.total %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
  <%else%>  
  <tbody>
    <% current_user.orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.id %></td>
        <td><%= order.product_id %></td>
        <td><%= order.total %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
  </tbody>
  <%end%>
</table>