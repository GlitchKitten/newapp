<div class="contact-form col-lg-8 col-md-8 col-sm-xs-12>
  <%= flash[:notice] %>  
            
  <%= form_tag("/static_pages/thank_you", id: "contact_form", class: "contact-form") do %>
  <div class = "row">        
    <div class = "form-group">
      <%= label_tag :name, "Your name", class: "contact-label" %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class = "form-group">
      <%= label_tag 'phone', 'Phone Number', class: "contact-label" %>
      <%= number_field_tag :phone, nil , class: "form-control", placeholder: "Digits" min: '10' %>
    </div>
    <div class = "form-group">
      <%= label_tag 'email', 'Email Address', class: "contact-label" %>
      <%= email_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class = "form-group">
      <%= text_area_tag :message, nil, placeholder: "Leave a message", class: "form-control contact-form message-box" %>
    </div>   
  </div>                           
      
  <%= submit_tag "Send", class: "btn btn-default" %>
  <% end %> 
                              
  
                                 
                               

     
 
      
      
      
      
       