<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "form_label" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control form_area" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
