<div class="col-sm-6 col-md-4 col-lg-4">
  <div class = "thumbnail">
    <%= link_to product do %> 
    <%= image_tag(product.image_url)%>
    <%end%> 
    <div class = "caption">
      <p><strong><%= product.name%></strong></p>
      <p><%= product.description %></p>
      <p><strong>Colour: </strong><%= product.colour %></p>
      <p><strong>$<%= product.price %></strong></p>         
      <p><strong>In stock: </strong><%= product.stock %></p>         
      <p class = "btn btn-default" role = "button"><%= link_to 'More Detail', product %></p>
    </div>
  </div> 
</div>  

<% if signed_in? && current_user.admin? %>
  <li><%= link_to 'Edit', edit_product_path(product) %></li>
  <li><%= link_to 'Destroy', product, :method => :delete, data: {confirm: "Are you sure you want to delete?"}%></li>
<% end %>
