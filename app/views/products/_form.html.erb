      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form_area" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form_area" %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, class: "form_area" %>
  </div>
  <div class = "field">
    <%= f.label :colour %> <br>
    <%= f.text_field :colour, class: "form_area" %>
  </div>
  <div class = "field">
    <%= f.label :price %> <br>
    <%= f.number_field :price, step: ".01", min: "0", class: "form_area" %>
  </div> 
  <div class = "field">
    <%= f.label :stock %> <br>
    <%= f.number_field :stock, step: "1", min: "0", class: "form_area" %>
  </div> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
